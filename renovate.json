{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    ".github/workflows/ci.yml",
    ".github/workflows/clean.yml"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "sbt",
        "sbt/sbt"
      ],
      "groupName": "sbt"
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ]
}
